{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Database=notification_db;Username=admin;Password=password"
    },
    "SmsSettings": {
        "Username": "set_via_env_variable_SMS_USERNAME",
        "Password": "set_via_env_variable_SMS_PASSWORD",
        "BaseUrl": "https://online.sigmasms.ru/",
        "Sender": "B-Media",
        "TestMode": false,
        "TokenRefreshMinutes": 50
    },
    "RetrySettings": {
        "MaxRetries": 3,
        "RetryDelaysInSeconds": [ 5, 15, 30 ],
        "DatabaseMaxRetries": 10,
        "DatabaseRetryDelayInSeconds": 5
    },
    "RabbitMQ": {
        "Host": "localhost",
        "Username": "guest",
        "Password": "guest",
        "Port": 5672
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Microsoft.EntityFrameworkCore.Database.Command": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    }
}